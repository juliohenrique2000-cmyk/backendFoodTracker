generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Activity {
  id          Int      @id @default(autoincrement())
  name        String
  type        String
  duration    Int
  calories    Float
  protein     Float
  carbs       Float
  fats        Float
  isCompleted Boolean  @default(false)
  createdAt   DateTime @default(now())

  @@map("activities")
}

model User {
  id           Int           @id @default(autoincrement())
  email        String        @unique
  password     String
  name         String
  createdAt    DateTime      @default(now())
  dateOfBirth  DateTime?
  photo        String?
  updatedAt    DateTime      @updatedAt
  pantryItems  PantryItem[]
  waterIntakes WaterIntake[]
}

model Recipes {
  id          Int    @id @default(autoincrement())
  name        String
  calories    Float
  fatsValue   Float
  carboValue  Float
  protValue   Float
  prepareTime Int

  @@map("recipes")
}

model PantryItem {
  id         Int            @id @default(autoincrement())
  name       String
  photo      String?
  categories MealCategory[]
  type       FoodType
  createdAt  DateTime       @default(now())
  updatedAt  DateTime       @updatedAt
  userId     Int
  user       User           @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("pantry_items")
}

model WaterIntake {
  id        Int      @id @default(autoincrement())
  userId    Int
  cups      Int      @default(0)
  date      DateTime @default(now())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date])
  @@map("water_intakes")
}

enum Gender {
  MALE
  FEMALE
  OTHER
}

enum MealCategory {
  BREAKFAST
  LUNCH
  DINNER
}

enum FoodType {
  DRINK
  PROTEIN
  CARBOHYDRATE
  FRUIT
  GRAIN
}
