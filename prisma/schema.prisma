// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Gender {
  MALE
  FEMALE
  OTHER
}

model Activity {
  id          Int      @id @default(autoincrement())
  name        String
  type        String
  duration    Int
  calories    Float
  protein     Float
  carbs       Float
  fats        Float
  isCompleted Boolean  @default(false)
  createdAt   DateTime @default(now())

  @@map("activities")
}

model User {
  id          Int      @id @default(autoincrement())
  name        String
  email       String   @unique
  password    String
  photo       String?
  dateOfBirth DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  pantryItems PantryItem[]
  waterIntakes WaterIntake[]
  //contact[]
  }


model Recipes {
  id        Int  @id @default(autoincrement())
  name      String
  calories  Float
  fatsValue Float
  carboValue  Float
  protValue   Float
  prepareTime Int

  @@map("recipes")
}

enum MealCategory {
  BREAKFAST
  LUNCH
  DINNER
}

enum FoodType {
  DRINK
  PROTEIN
  CARBOHYDRATE
  FRUIT
  GRAIN
}

model PantryItem {
  id          Int          @id @default(autoincrement())
  name        String
  photo       String?      // URL or path to photo
  categories  MealCategory[]
  type        FoodType
  userId      Int
  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  @@map("pantry_items")
}

model WaterIntake {
  id        Int      @id @default(autoincrement())
  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  cups      Int      @default(0)
  date      DateTime @default(now())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, date])
  @@map("water_intakes")
}
  

  
